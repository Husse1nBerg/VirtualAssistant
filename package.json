    "db:studio": "prisma studio",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "@deepgram/sdk": "^3.9.0",
    "@prisma/client": "^6.3.0",
