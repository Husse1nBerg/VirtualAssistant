{
  "name": "virtual-assistant",
  "version": "1.0.0",
  "description": "Production-grade missed-call AI voice assistant using Twilio + Claude",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
